<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context="com.casalprim.marc.tickettoridecalculator.ui.fragments.PlayersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            android:gravity="bottom"
            android:text="@string/select_players_label"
            android:textAlignment="center"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/playerSelectorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/bluePlayerSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:shadowColor="@android:color/holo_blue_dark"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/redPlayerSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:shadowColor="@android:color/holo_red_dark"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/greenPlayerSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:shadowColor="@android:color/holo_green_dark"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/yellowPlayerSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:shadowColor="#FFD800"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/blackPlayerSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:shadowColor="@android:color/black"
                android:textOff=""
                android:textOn="" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/next_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:scaleType="center"
        android:src="@drawable/ic_menu_send"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:rippleColor="@color/colorPrimaryDark" />

</FrameLayout>
